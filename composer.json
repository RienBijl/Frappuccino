{
    "name": "rien/frappuccino",
    "description": "Lightweight PHP framework tailored to my personal needs",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Rien Bijl",
            "email": "helloitsrien@gmail.com"
        }
    ],
    "repositories": [
        {
            "url": "https://github.com/baristappuccino/GreenBeans.git",
            "type": "git"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^4.0",
        "rien/green-beans": "dev-master"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8"
    },
    "autoload" : {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php beans genkey"
        ]
    }
}
